@model Cliente;

@{
	ViewData["Title"] = "Deletar Cliente";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.Nome</h4>

<form asp-action="Delete">
	<input type="hidden" asp-for="ClienteId" />
	<label asp-for="Nome">Nome</label>
	<input asp-for="Nome" placeholder="Digite seu nome" disabled />
	<br />
	<label asp-for="DataNascimento">Data de Nascimento </label>
	<input asp-for="DataNascimento" disabled />
	<br />
	<label asp-for="Salario">Salário</label>
	<input asp-for="Salario" placeholder="Digite seu salário" disabled />
	<br />
	<input class="btn btn-danger" type="submit" value="Deletar" />
	<a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
